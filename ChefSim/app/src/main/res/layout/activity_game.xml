<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".GameActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="100dp"
        android:layout_height="730dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/butBun"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:background="@drawable/rounded"
            android:text="Bun" />

        <Button
            android:id="@+id/butPatty"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:background="@drawable/rounded"
            android:text="Patty" />

        <Button
            android:id="@+id/butBacon"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:background="@drawable/rounded"
            android:text="Bacon" />

        <Button
            android:id="@+id/butTomato"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:background="@drawable/rounded"
            android:text="Tomato" />

        <Button
            android:id="@+id/butLettuce"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:background="@drawable/rounded"
            android:text="Lettuce" />

        <Button
            android:id="@+id/butPickles"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:background="@drawable/rounded"
            android:text="Pickles" />

        <Button
            android:id="@+id/butKetchup"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:background="@drawable/rounded"
            android:text="Ketchup" />

        <Button
            android:id="@+id/butMustard"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:background="@drawable/rounded"
            android:text="Mustard" />

        <Button
            android:id="@+id/butCheese"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:background="@drawable/rounded"
            android:text="Cheese" />


    </LinearLayout>

    <EditText
        android:id="@+id/etOrder"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/butBurger9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bun"
            android:text="Bun"
            android:textSize="10dp" />

        <Button
            android:id="@+id/butBurger8"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/tomato"
            android:text="Tomato"
            android:textSize="10dp" />

        <Button
            android:id="@+id/butBurger7"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/bacon"
            android:text="Bacon"
            android:textSize="10dp" />

        <Button
            android:id="@+id/butBurger6"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/patty"
            android:text="Patty"
            android:textSize="10dp" />

        <Button
            android:id="@+id/butBurger5"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/lettuce"
            android:text="Lettuce"
            android:textSize="10dp" />

        <Button
            android:id="@+id/butBurger4"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/pickles"
            android:text="Pickles"
            android:textSize="10dp" />

        <Button
            android:id="@+id/butBurger3"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@drawable/ketchup"
            android:text="Ketchup"
            android:textSize="10dp" />

        <Button
            android:id="@+id/butBurger2"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@drawable/mustard"
            android:text="Mustard"
            android:textSize="10dp" />

        <Button
            android:id="@+id/butBurger1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bun"
            android:text="Bun"
            android:textSize="10dp" />

    </LinearLayout>

    <Button
        android:id="@+id/butPlate"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/plate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-light"
        android:text=" Round 1 "
        android:textColor="@color/colorSecondary"
        android:textSize="30dp"
        android:background="@drawable/roundedred"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>